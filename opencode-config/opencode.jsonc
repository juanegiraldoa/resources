{
	"$schema": "https://opencode.ai/config.json",
	"username": "Juan",
	"autoupdate": true,
	"model": "deepseek/deepseek-chat",
	"formatter": {
		"prettier": {
			"command": ["pnpx", "prettier", "--write", "$FILE"],
			"environment": {
				"NODE_ENV": "development",
			},
			"extensions": [".js", ".ts", ".jsx", ".tsx", ".astro"],
		},
	},
	"agent": {
		"git": {
			"mode": "subagent",
			"description": "Execute git commands",
			"tools": {
				"write": false,
				"edit": false,
			},
			"prompt": "{file:./agents/git.md}",
			"permission": {
				"bash": "allow",
				"edit": "deny",
				"webfetch": "deny",
			},
		},
	},
	"command": {
		"commit": {
			"description": "Commit changes on git",
			"agent": "git",
			"template": "{file:./commands/commit.md}",
		},
	},
	"mcp": {
		"cloudflare-docs": {
			"type": "local",
			"enabled": false,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://docs.mcp.cloudflare.com/sse",
			],
		},
		"aws-docs": {
			"type": "local",
			"enabled": false,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://knowledge-mcp.global.api.aws",
			],
		},
		"astro-docs": {
			"type": "local",
			"enabled": false,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://mcp.docs.astro.build/mcp",
			],
		},
		"terraform-docs": {
			"type": "local",
			"enabled": false,
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"hashicorp/terraform-mcp-server",
			],
		},
		"daisyui-blueprint": {
			"type": "local",
			"enabled": false,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://gitmcp.io/saadeghi/daisyui",
			],
		},
	},
}
