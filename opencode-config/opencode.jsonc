{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "agent": {
    "git": {
      "description": "Execute git commands",
      "tools": {
        "write": false,
        "edit": false,
      },
      "prompt": "{file:./agents/git.md}",
      "permission": {
        "bash": "ask",
        "edit": "deny",
        "webfetch": "deny",
      },
    },
  },
  "command": {
    "commit": {
      "description": "",
      "agent": "git",
      "template": "Add to stage the files sended by the user $ARGUMENTS and depending on the changes that have been made, it creates a commit message and executes the git commit command",
    },
  },
}
